#include <iostream>
#include <fstream>
#include <string>

using namespace std;

int main() {
    ifstream fin("First.txt");
    string word;
    int count = 0;

    if (!fin.is_open()) {
        cout << "File not found!" << endl;
        return 0;
    }

    while (fin >> word) {
        count++;
    }

    fin.close();

    cout << "Total words: " << count << endl;

    return 0;
}

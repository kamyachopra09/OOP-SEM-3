#include <iostream>
#include <string>

using namespace std;

class result2; // Forward declaration

class result1 {
private:
    string name;
    float marks;

public:
    void accept() {
        cout << "Enter student name: ";
        // Using getline for names that might contain spaces, as suggested by original code's presence of 'getline'
        cin.ignore();
        getline(cin, name);
        cout << "Enter the total marks obtained in the first semester out of 100: ";
        cin >> marks;
    }

    friend void average(result1 r1, result2 r2);
};

class result2 {
private:
    float marks;

public:
    void accept() {
        cout << "Enter the total marks obtained in the second semester out of 100: ";
        cin >> marks;
    }

    friend void average(result1 r1, result2 r2);
};

void average(result1 r1, result2 r2) {
    float avg = (r1.marks + r2.marks) / 2.0;
    cout << "\nAvg of both the results (for " << r1.name << "): " << avg << endl;
}

int main() {
    result1 r1;
    result2 r2;

    r1.accept();
    r2.accept();

    average(r1, r2);

    return 0;
}

#include <iostream>

using namespace std;

class Sum {
public:
    int total(int arr[], int n) {
        int st = 0;
        for (int i = 0; i < n; i++) {
            st = st + arr[i];
        }
        return st;
    }

    float total(float arr[], int n) {
        float st = 0.0;
        for (int i = 0; i < n; i++) {
            st = st + arr[i];
        }
        return st;
    }
};

int main() {
    Sum s1;
    
    // Example from image (int marks array)
    int marks[] = {6, 7, 3, 2, 1, 9, 7, 8, 9, 3};
    int sum_int = s1.total(marks, 10);

    cout << "Sum of 10 student marks: " << sum_int << endl;

    // Example 2 (int student grade array)
    int grade[] = {1, 2, 3, 4, 5};
    int sum_grade = s1.total(grade, 5);
    
    cout << "Sum of 5 student grade points: " << sum_grade << endl;

    return 0;
}

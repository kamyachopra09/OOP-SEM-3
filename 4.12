#include <iostream>
#include <string>

using namespace std;

class Student {
private:
    string name;
    int maths;
    int phy;
    int chem;

public:
    void accept() {
        cout << "Enter student name: ";
        cin >> name;
        cout << "Enter maths marks: ";
        cin >> maths;
        cout << "Enter physics marks: ";
        cin >> phy;
        cout << "Enter chem marks: ";
        cin >> chem;
    }

    friend void calculateAverage(Student s);
};

void calculateAverage(Student s) {
    float avg = (float)(s.maths + s.phy + s.chem) / 3.0;
    cout << "Avg marks: " << avg << endl;
}

int main() {
    Student s1;

    s1.accept();
    cout << endl;
    calculateAverage(s1);

    return 0;
}

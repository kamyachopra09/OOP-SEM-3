using namespace std;

class College {
private:
    int rollno;
    string name;
    string course;

public:
    // Constructor with multiple parameters
    College(string a, int b, string c) {
        name = a;
        rollno = b;
        course = c;
    }

    void display() {
        cout << "Name is: " << name << endl;
        cout << "Roll no is: " << rollno << endl;
        cout << "Course is: " << course << endl;
    }
};


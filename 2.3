#include <iostream>
#include <string>

using namespace std;

class Staff {
public:
    string name;
    string post; // Storing post as a string

    // Function to accept staff data
    void accept() {
        cout << "Enter staff name: ";
        cin >> name;
        cout << "Enter staff post: ";
        cin >> post;
    }

    // Function to display staff data (only name and post)
    void display() {
        cout << "Staff Name: " << name << endl;
        cout << "Staff Post: " << post << endl;
    }

    // Helper function to get the post for comparison
    string getPost() const {
        return post;
    }
};

int main() {
    const int NUM_STAFF = 5;
    Staff s[NUM_STAFF]; // Array of 5 Staff objects

    // 1. Accept data for all 5 staff members
    cout << "--- Enter details for 5 staff members ---" << endl;
    for (int i = 0; i < NUM_STAFF; ++i) {
        cout << "\nStaff " << i + 1 << endl;
        s[i].accept();
    }

    cout << "\n--- Names of Staff Who Are \"HOD\" ---" << endl;
    // 2. Display the data for staff members whose post is "HOD"
    bool foundHOD = false;
    for (int i = 0; i < NUM_STAFF; ++i) {
        // The original code uses a simple string comparison: if (s[i].post == "HOD")
        if (s[i].getPost() == "HOD") {
            s[i].display();
            cout << "----------------------------------" << endl;
            foundHOD = true;
        }
    }

    if (!foundHOD) {
        cout << "No staff member with the post \"HOD\" found." << endl;
    }

    return 0;
}

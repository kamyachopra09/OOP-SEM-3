#include <iostream>
#include <string>

using namespace std;

class Person {
protected:
    string name;
    int age;

public:
    void accept() {
        cout << "Name of Person: ";
        cin >> name;
        cout << "Age of Person: ";
        cin >> age;
    }

    void display() {
        cout << "Name of Person: " << name << endl;
        cout << "Age of Person: " << age << endl;
    }
};

class Academics : protected Person {
protected:
    int academic_score;

public:
    void accept() {
        Person::accept();
        cout << "Enter academic score: ";
        cin >> academic_score;
    }

    void display() {
        Person::display();
        cout << "Academic score: " << academic_score << endl;
    }
};

class Sports : protected Person {
protected:
    int sports_score;

public:
    void accept() {
        Person::accept();
        cout << "Enter sports score: ";
        cin >> sports_score;
    }

    void display() {
        Person::display();
        cout << "Sports score: " << sports_score << endl;
    }
};

class Result : public Academics, public Sports {
private:
    int total;

public:
    void calculate() {
        // Accessing members inherited from the protected base classes
        // Note: Protected inheritance means the members are protected in Result
        // We use the member variables directly as they are protected in Result
        // We must ensure 'Person::accept()' is called only once, but the structure calls it twice.
        // I will use the member variables from the protected bases:
        total = Academics::academic_score + Sports::sports_score;
    }

    void display() {
        Academics::display(); // Displays Person data + Academic score
        // We skip Sports::display() to avoid showing Person data twice
        cout << "Sports score: " << Sports::sports_score << endl;
        cout << "Total: " << total << endl;
    }
};

int main() {
    Result r;

    // We must call accept() for both paths to initialize all data members
    // Note: This will prompt for Name and Age twice due to multiple inheritance
    r.Academics::accept();
    r.Sports::accept();

    r.calculate();
    r.display();

    return 0;
}

#include <iostream>

using namespace std;

class num2; // Forward declaration

class num1 {
private:
    int a;

public:
    void accept() {
        cout << "Enter the first number: ";
        cin >> a;
    }
    
    // Friend declaration
    friend void swap(num1 &n1, num2 &n2);
};

class num2 {
private:
    int b;

public:
    void accept() {
        cout << "Enter the second number: ";
        cin >> b;
    }
    
    // Friend declaration
    friend void swap(num1 &n1, num2 &n2);
};

void swap(num1 &n1, num2 &n2) {
    int temp = n1.a;
    n1.a = n2.b;
    n2.b = temp;

    cout << "\nAfter swapping: " << endl;
    cout << "First number: " << n1.a << endl;
    cout << "Second number: " << n2.b << endl;
}

int main() {
    num1 n1;
    num2 n2;

    n1.accept();
    n2.accept();

    swap(n1, n2);

    return 0;
}

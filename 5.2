#include <iostream>

using namespace std;

class Sum {
private:
    int n, i;
    int sum;

public:
    Sum(int num) {
        n = num;
        sum = 0;
    }

    void calculate() {
        for (i = 1; i <= n; i++) {
            sum = sum + i;
        }
    }

    void display() {
        cout << "Sum = " << sum << endl;
    }
};

int main() {
    // The handwritten code uses Sum n(20); which calculates sum up to 20
    Sum n(20);

    n.calculate();
    n.display();

    return 0;
}
